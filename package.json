{
  "name": "platzi-store",
  "version": "1.0.0",
  "description": "Proyecto para el curso de Jest",
  "main": "src/index.js",
  "scripts": {
    "build": "webpack --mode production",
    "start": "webpack-dev-server --open --mode development",
    "format": "prettier --write '{*.js,src/**/*.{js,jsx}}'",
    "lint": "eslint src/",
    "test": "jest",
    "test:w": "jest --watch",
    "jest:upsnapshots": "jest --updateSnapshots"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gndx/platzi-store.git"
  },
  "keywords": [
    "React",
    "Webpack",
    "Babel",
    "JavaScript",
    "React-router",
    "Redux"
  ],
  "author": "Oscar Barajas <oscar@arepa.dev>",
  "license": "MIT",
  "dependencies": {
    "@babel/core": "^7.7.2",
    "@babel/preset-env": "^7.7.1",
    "@babel/preset-react": "^7.7.0",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^9.1.2",
    "css-loader": "^6.7.3",
    "history": "^5.3.0",
    "html-loader": "^4.2.0",
    "html-webpack-plugin": "^5.5.0",
    "jsdom": "21.1.1",
    "jsdom-global": "3.0.2",
    "mini-css-extract-plugin": "^2.7.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.5",
    "react-router-dom": "^6.10.0",
    "redux": "^4.0.4",
    "style-loader": "^3.3.2",
    "stylus": "^0.59.0",
    "stylus-loader": "^7.1.0",
    "webpack": "^5.77.0",
    "webpack-cli": "^5.0.1"
  },
  "devDependencies": {
    "@cfaester/enzyme-adapter-react-18": "^0.7.0",
    "@types/jest": "^29.5.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "enzyme": "^3.11.0",
    "eslint": "^8.37.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.14.3",
    "jest": "^29.5.0",
    "jest-fetch-mock": "^3.0.3",
    "prettier": "^2.8.7",
    "react-test-renderer": "^18.2.0",
    "webpack-dev-server": "^4.13.2"
  },
  "bugs": {
    "url": "https://github.com/gndx/platzi-store/issues"
  },
  "homepage": "https://github.com/gndx/platzi-store/#readme",
  "jest": {
    "verbose": true,
    "setupFilesAfterEnv": [
      "<rootDir>/src/__test__/setupTest.js"
    ],
    "moduleNameMapper": {
      "\\.(styl|css)$": "<rootDir>/src/__mocks__/styleMock.js"
    },
    "testEnviroment": "jsdom-global"
  }
}
